def verschiebezahl(zeichen):
    return ord(zeichen) - 64

def verschluesselterTextVig(text, schluessel):
    text = text.upper()
    schluessel = schluessel.upper()
    ntext = ""
    counter = 0
    for letter in text:
        if letter != " ":
            if ord(letter) >= 65 and ord(letter) <= 90:
                if counter == len(schluessel):
                    counter = 0
                ztext = (ord(letter) - 64) + verschiebezahl(schluessel[counter])
                while ztext > 26:
                    ztext = ztext - 26
                ntext = ntext + chr(ztext + 64)
                counter = counter + 1
            else :
                ntext = ntext + letter
        else :
            ntext = ntext + " "
    return ntext

def entschluesselterTextVig(text, schluessel):
    text = text.upper()
    schluessel = schluessel.upper()
    ntext = ""
    counter = 0
    for letter in text:
        if letter != " ":
            if ord(letter) >= 65 and ord(letter) <= 90:
                if counter == len(schluessel):
                    counter = 0
                ztext = (ord(letter) - 64) - verschiebezahl(schluessel[counter])
                while ztext < 26:
                    ztext = ztext + 26
                ntext = ntext + chr(ztext + 64)
                counter = counter + 1
            else :
                ntext = ntext + letter
        else :
            ntext = ntext + " "
    return ntext
